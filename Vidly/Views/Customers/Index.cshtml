@model Vidly.ViewModels.CustomerIndexViewModel
@{
    ViewBag.Title = "Customer index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Customer index</h2>
    @if (Model.Customers.Count < 1)
    {
        <text>There's no registered customers.</text>
    }
    else
    {
        <table class="table table-striped table-responsive table-hover">
            <thead>
                <tr>
                    <th>Last name</th>
                    <th>First name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Firstname</td>
                        <td>@Html.ActionLink(customer.Lastname, "Details", "Customers", new { id = customer.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>